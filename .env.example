# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Kong Gateway
KONG_ADMIN_URL=http://localhost:8001
KONG_PROXY_URL=http://localhost:8000

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Feature Flags
ENABLE_KONG=true
ENABLE_BILLING=true

# Anthropic Claude (for AI Playground)
ANTHROPIC_API_KEY=sk-ant-api03-...

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_KONG=true
ENABLE_BILLING=true
ENABLE_AI_PLAYGROUND=true
ENABLE_WORKFLOWS=true
ENABLE_CACHING=true
# Landing: 'true' = gradient band layout (section continuity); omit or 'false' = original block layout
# NEXT_PUBLIC_LANDING_GRADIENT_BANDS=false

# GitHub OAuth (for Codebase Analytics)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Cron (for scheduled jobs e.g. GDPR deletion execution)
CRON_SECRET=your-cron-secret
# Retention: drop api_requests_log partitions older than N months (default 12)
API_REQUESTS_LOG_RETENTION_MONTHS=12

# Optional / server-side (when used by API or edge)
SUPABASE_URL=https://your-project.supabase.co
VALIDATION_CONTEXT_PATH=./validation-context.json
APIMP_KEY=your-apimp-key
RESEND_API_KEY=re_...
EMAIL_FROM=noreply@example.com

# Set by Node/Next/CI (documented for SEC-3; do not set in .env)
NODE_ENV=development
ANALYZE=
CI=

# E2E / Playwright
BASE_URL=http://localhost:3000
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test-password
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=admin-password

# Read-only (set by npm/build; documented for SEC-3)
npm_package_version=1.0.0
